{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./temp-types",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "rootDir": "./src",
    "jsx": "react-jsx",
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "demo/**/*",
    "src/assets/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "node_modules",
    "dist"
  ]
}
